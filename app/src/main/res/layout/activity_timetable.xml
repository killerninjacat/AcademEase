<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/material_dynamic_primary10"
    android:layout_height="match_parent">

    <!-- Your other views here -->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/material_dynamic_secondary90"
        app:tabTextColor="@color/material_dynamic_tertiary50"
        app:tabTextAppearance="@style/CustomTabText"
        app:tabSelectedTextColor="@color/material_dynamic_tertiary10"
        app:tabIndicatorColor="@color/material_dynamic_secondary20"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
